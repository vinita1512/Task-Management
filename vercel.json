{
  "version": 2,
  "builds": [
    {
      "src": "backend/app.js",  
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",   
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",     
      "destination": "/backend/app.js"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",         
      "dest": "/backend/app.js"
    },
    {
      "src": "/(.*)",           
      "dest": "/frontend/dist/index.html"
    }
  ]
}
